build_f90=@BUILD_F90@
build_python=@BUILD_PYTHON@

all:
	cd src; @MAKE@
ifeq ($(build_f90),1)
	cd fortran; @MAKE@
endif


clean:
	$(RM) ../lib/libcantera.a
	cd src; @MAKE@ clean
	cd clib/src; @MAKE@ clean
	cd python; @MAKE@ clean

depends:
	cd src; @MAKE@ depends
	cd clib/src; @MAKE@ depends

