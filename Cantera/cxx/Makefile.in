	cd src;   @MAKE@
	cd demos; @MAKE@

clean:
	cd src; @MAKE@ clean
	cd demos; @MAKE@ clean

depends:
	cd src; @MAKE@ depends
	cd demos; @MAKE@ depends

install:
	cd src; @MAKE@ install
	cd demos; @MAKE@ install

