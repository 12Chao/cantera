#!/bin/sh

PY_DEMOS = combustor_sim functors_sim mix1_sim mix2_sim piston_sim reactor1_sim \
           reactor2_sim sensitivity_sim surf_pfr_sim

all:
	@(for py in $(PY_DEMOS) ; do \
	    echo "running $${py}..."; \
         (cd "$${py}"; @MAKE@ ) ; \
	done)

run:
	@(for py in $(PY_DEMOS) ; do \
	    echo "running $${py}..."; \
         (cd "$${py}"; @MAKE@ run ) ; \
	done)

test:
	@(for py in $(PY_DEMOS) ; do \
	    echo "testing $${py}..."; \
         (cd "$${py}"; @MAKE@ test ) ; \
	done)

clean:
	@(for py in $(PY_DEMOS) ; do \
	    echo "testing $${py}..."; \
         (cd "$${py}"; @MAKE@ clean ) ; \
	done)
	rm -f *.log *.csv *.xml

# end of file

