.SUFFIXES :
.SUFFIXES : .cpp .d .o .h

INCDIR = ../../../build/include/cantera/kernel/thermo
INSTALL_TSC = ../../../bin/install_tsc
do_ranlib = @DO_RANLIB@

CXX_FLAGS = @CXXFLAGS@ $(CXX_OPT)

# Extended Cantera Thermodynamics Object Files
CATHERMO_OBJ = SingleSpeciesTP.o StoichSubstanceSSTP.o
CATHERMO_H   = SingleSpeciesTP.h StoichSubstanceSSTP.h

CXX_INCLUDES = -I.. @CXX_INCLUDES@
LIB = @buildlib@/libcaThermo.a

DEPENDS = $(CATHERMO_OBJ:.o=.d)

all: $(LIB)
	@(@INSTALL@ -d $(INCDIR))
	@(for lh in $(CATHERMO_H) ; do \
	  $(INSTALL_TSC) "$${lh}" $(INCDIR) ; \
	done)
%.d:
	g++ -MM $(CXX_INCLUDES) $*.cpp > $*.d

.cpp.o:
	@CXX@ -c $< $(CXX_FLAGS) $(CXX_INCLUDES)

$(LIB): $(CATHERMO_OBJ) $(CATHERMO_H)
	@ARCHIVE@ $(LIB) $(CATHERMO_OBJ) > /dev/null
ifeq ($(do_ranlib),1)
	@RANLIB@ $(LIB)
endif

clean:
	@(for lh in $(CATHERMO_H) ; do \
            th=$(INCDIR)/"$${lh}" ; \
	    if test -f "$${th}" ; then \
	      $(RM) "$${th}"  ; \
              echo "$(RM) $${th}" ; \
            fi \
	  done)
	@(if test -f $(LIB) ; then \
	    $(RM) $(LIB) ; \
            echo "$(RM) $(LIB)" ; \
          fi)
	$(RM) *.o *~  .depends

depends: $(DEPENDS)
	cat *.d > .depends
	$(RM) $(DEPENDS) 

TAGS: 
	etags *.h *.cpp

ifeq ($(wildcard .depends), .depends)
include .depends
endif

